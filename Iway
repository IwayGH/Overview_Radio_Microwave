        <div class="slide-content">
          <div class="references">
            <div class="reference-item en-content">
              <h3 class="editable" contenteditable="false">
                <i class="fas fa-book"></i> Vendor Documentation
              </h3>
              <p class="editable" contenteditable="false">
                NEC PASOLINK Technical Manuals<br />
                Ceragon FibeAir IP-20 Documentation<br />
                Huawei RTN 900 Series Configuration Guides<br />
                ZTE ZXMP S Series Product Specifications
              </p>
            </div>
            <div class="reference-item id-content">
              <h3 class="editable" contenteditable="false">
                <i class="fas fa-book"></i> Dokumentasi Vendor
              </h3>
              <p class="editable" contenteditable="false">
                Manual Teknis NEC PASOLINK<br />
                Dokumentasi Ceragon FibeAir IP-20<br />
                Panduan Konfigurasi Huawei RTN 900 Series<br />
                Spesifikasi Produk ZTE ZXMP S Series
              </p>
            </div>
            <div class="reference-item en-content">
              <h3 class="editable" contenteditable="false">
                <i class="fas fa-file-alt"></i> Industry Standards
              </h3>
              <p class="editable" contenteditable="false">
                ITU-T G.826: Error performance parameters<br />
                ITU-T G.828: Availability performance<br />
                ETSI EN 300 197: Fixed Radio Systems<br />
                FCC Part 101: Microwave Radio Standards
              </p>
            </div>
            <div class="reference-item id-content">
              <h3 class="editable" contenteditable="false">
                <i class="fas fa-file-alt"></i> Standar Industri
              </h3>
              <p class="editable" contenteditable="false">
                ITU-T G.826: Parameter performa kesalahan<br />
                ITU-T G.828: Performa ketersediaan<br />
                ETSI EN 300 197: Sistem Radio Tetap<br />
                FCC Part 101: Standar Radio Microwave
              </p>
            </div>
            <div class="reference-item en-content">
              <h3 class="editable" contenteditable="false">
                <i class="fas fa-graduation-cap"></i> Training Resources
              </h3>
              <p class="editable" contenteditable="false">
                Microwave Link Engineering Certification<br />
                Radio Frequency Fundamentals Course<br />
                Advanced Troubleshooting Techniques<br />
                Network Management Systems Training
              </p>
            </div>
            <div class="reference-item id-content">
              <h3 class="editable" contenteditable="false">
                <i class="fas fa-graduation-cap"></i> Sumber Pelatihan
              </h3>
              <p class="editable" contenteditable="false">
                Sertifikasi Teknik Link Microwave<br />
                Kursus Dasar Radio Frekuensi<br />
                Teknik Pemecahan Masalah Lanjutan<br />
                Pelatihan Sistem Manajemen Jaringan
              </p>
            </div>
            <div class="reference-item en-content">
              <h3 class="editable" contenteditable="false">
                <i class="fas fa-tools"></i> Field Experience
              </h3>
              <p class="editable" contenteditable="false">
                15+ years of microwave deployment experience<br />
                500+ successful link installations<br />
                Comprehensive troubleshooting database<br />
                Best practices documentation
              </p>
            </div>
            <div class="reference-item id-content">
              <h3 class="editable" contenteditable="false">
                <i class="fas fa-tools"></i> Pengalaman Lapangan
              </h3>
              <p class="editable" contenteditable="false">
                15+ tahun pengalaman penyebaran microwave<br />
                500+ instalasi link berhasil<br />
                Database pemecahan masalah komprehensif<br />
                Dokumentasi praktik terbaik
              </p>
            </div>
          </div>
        </div>
        <div class="slide-footer editable" contenteditable="false">
          Prepared by: Imam Wahyudi – Senior Microwave Technical Support
        </div>
      </div>

      <div class="navigation">
        <button class="nav-btn" onclick="prevSlide()">
          <i class="fas fa-chevron-left"></i> Previous
        </button>
        <button class="nav-btn" onclick="nextSlide()">
          Next <i class="fas fa-chevron-right"></i>
        </button>
      </div>
    </div>

    <script>
      // Configuration
      let currentSlide = 1;
      const totalSlides = 13;
      let currentLang = "en"; // Default language
      let editMode = false;
      let isLoggedIn = false;
      let draggedElement = null;
      let resizingElement = null;
      let startX, startY, startWidth, startHeight, startLeft, startTop;
      let isDarkMode = true;
      let exportLanguage = "en"; // Default export language

      // Initialize on page load
      window.onload = function () {
        loadFromLocalStorage();
        updateThemeIcon();
      };

      // Toast notification function
      function showToast(message, type = "info") {
        const toast = document.getElementById("toast");
        const toastMessage = document.getElementById("toast-message");

        // Set message
        toastMessage.textContent = message;

        // Set type class
        toast.className = "toast";
        toast.classList.add(type);

        // Show toast
        setTimeout(() => {
          toast.classList.add("show");
        }, 100);

        // Hide toast after 3 seconds
        setTimeout(() => {
          toast.classList.remove("show");
        }, 3000);
      }

      function showLoginModal() {
        document.getElementById("loginModal").classList.add("active");
        document.getElementById("passwordInput").value = "";
        document.getElementById("passwordInput").focus();
        document.getElementById("errorMessage").textContent = "";
      }

      function closeLoginModal() {
        document.getElementById("loginModal").classList.remove("active");
      }

      function showExportModal() {
        document.getElementById("exportModal").classList.add("active");
      }

      function closeExportModal() {
        document.getElementById("exportModal").classList.remove("active");
      }

      function showProgress(text) {
        const progressContainer = document.getElementById("progressContainer");
        const progressText = document.getElementById("progressText");
        const progressFill = document.getElementById("progressFill");

        progressText.textContent = text;
        progressFill.style.width = "0%";
        progressContainer.classList.add("active");
      }

      function updateProgress(percent) {
        const progressFill = document.getElementById("progressFill");
        progressFill.style.width = percent + "%";
      }

      function hideProgress() {
        const progressContainer = document.getElementById("progressContainer");
        progressContainer.classList.remove("active");
      }

      function login() {
        const passwordInput = document.getElementById("passwordInput");
        const errorMessage = document.getElementById("errorMessage");
        const password = passwordInput.value;

        if (password === "ImamWay") {
          isLoggedIn = true;
          closeLoginModal();
          toggleEditMode();
          errorMessage.textContent = "";
          showToast("Login successful! Edit mode activated.", "success");
        } else {
          errorMessage.textContent = "Incorrect password. Please try again.";
          passwordInput.value = "";
          passwordInput.focus();
          showToast("Incorrect password. Please try again.", "error");
        }
      }

      function logout() {
        isLoggedIn = false;
        showToast("You have been logged out successfully.", "info");

        // Exit edit mode if active
        if (editMode) {
          toggleEditMode();
        }
      }

      // Toggle between dark and light mode
      function toggleTheme() {
        const body = document.body;
        const themeIcon = document.querySelector(".theme-toggle i");

        if (isDarkMode) {
          body.classList.remove("dark-mode");
          body.classList.add("light-mode");
          themeIcon.classList.remove("fa-moon");
          themeIcon.classList.add("fa-sun");
          isDarkMode = false;
          showToast("Switched to light mode", "info");
        } else {
          body.classList.remove("light-mode");
          body.classList.add("dark-mode");
          themeIcon.classList.remove("fa-sun");
          themeIcon.classList.add("fa-moon");
          isDarkMode = true;
          showToast("Switched to dark mode", "info");
        }
      }

      // Update theme icon based on current mode
      function updateThemeIcon() {
        const themeIcon = document.querySelector(".theme-toggle i");
        if (isDarkMode) {
          themeIcon.classList.remove("fa-sun");
          themeIcon.classList.add("fa-moon");
        } else {
          themeIcon.classList.remove("fa-moon");
          themeIcon.classList.add("fa-sun");
        }
      }

      // Allow Enter key to submit login
      document
        .getElementById("passwordInput")
        .addEventListener("keypress", function (e) {
          if (e.key === "Enter") {
            login();
          }
        });

      function showSlide(n) {
        const slides = document.querySelectorAll(".slide");

        if (n > totalSlides) currentSlide = 1;
        if (n < 1) currentSlide = totalSlides;

        slides.forEach((slide) => slide.classList.remove("active"));
        document.getElementById(`slide${currentSlide}`).classList.add("active");
      }

      function nextSlide() {
        currentSlide++;
        showSlide(currentSlide);
      }

      function prevSlide() {
        currentSlide--;
        showSlide(currentSlide);
      }

      function toggleLanguage() {
        const body = document.body;
        const langButton = document.querySelector(".lang-toggle");

        if (currentLang === "en") {
          body.classList.remove("lang-en");
          body.classList.add("lang-id");
          langButton.innerHTML = '<i class="fas fa-language"></i> EN';
          currentLang = "id";
          showToast("Bahasa Indonesia", "info");
        } else {
          body.classList.remove("lang-id");
          body.classList.add("lang-en");
          langButton.innerHTML = '<i class="fas fa-language"></i> ID';
          currentLang = "en";
          showToast("English language", "info");
        }
      }

      function toggleEditMode() {
        if (!isLoggedIn) {
          showLoginModal();
          return;
        }

        editMode = !editMode;
        const editToggleBtn = document.getElementById("editToggleBtn");
        const saveBtn = document.getElementById("saveBtn");
        const addImageBtn = document.getElementById("addImageBtn");
        const exitBtn = document.getElementById("exitBtn");
        const logoutBtn = document.getElementById("logoutBtn");
        const editables = document.querySelectorAll(".editable");
        const slideImages = document.querySelectorAll(".slide-image");

        if (editMode) {
          // Show edit controls
          saveBtn.style.display = "flex";
          addImageBtn.style.display = "flex";
          exitBtn.style.display = "flex";
          logoutBtn.style.display = "flex";
          editToggleBtn.style.display = "none";

          // Enable content editing
          editables.forEach((el) => {
            el.contentEditable = true;
            el.style.cursor = "text";
          });
          slideImages.forEach((img) => {
            img.classList.add("editing");
          });
          showToast("Edit mode activated", "success");
        } else {
          // Hide edit controls
          saveBtn.style.display = "none";
          addImageBtn.style.display = "none";
          exitBtn.style.display = "none";
          logoutBtn.style.display = "none";
          editToggleBtn.style.display = "flex";

          // Disable content editing
          editables.forEach((el) => {
            el.contentEditable = false;
            el.style.cursor = "default";
          });
          slideImages.forEach((img) => {
            img.classList.remove("editing");
          });
          showToast("Edit mode deactivated", "info");
        }
      }

      function saveChanges() {
        const presentationData = {
          slides: {},
        };

        // Save text content
        for (let i = 1; i <= totalSlides; i++) {
          const slide = document.getElementById(`slide${i}`);
          const editables = slide.querySelectorAll(".editable");
          presentationData.slides[i] = {
            content: {},
          };

          editables.forEach((el, index) => {
            presentationData.slides[i].content[index] = el.innerHTML;
          });
        }

        // Save images
        const images = document.querySelectorAll(".slide-image");
        presentationData.images = [];

        images.forEach((img) => {
          presentationData.images.push({
            src: img.src,
            slide: img.parentElement.id,
            width: img.style.width,
            height: img.style.height,
            left: img.style.left,
            top: img.style.top,
          });
        });

        localStorage.setItem(
          "presentationData",
          JSON.stringify(presentationData)
        );
        showToast("Changes saved successfully!", "success");
      }

      function loadFromLocalStorage() {
        const savedData = localStorage.getItem("presentationData");
        if (!savedData) return;

        const presentationData = JSON.parse(savedData);

        // Load text content
        for (let i = 1; i <= totalSlides; i++) {
          if (!presentationData.slides[i]) continue;

          const slide = document.getElementById(`slide${i}`);
          const editables = slide.querySelectorAll(".editable");

          editables.forEach((el, index) => {
            if (presentationData.slides[i].content[index]) {
              el.innerHTML = presentationData.slides[i].content[index];
            }
          });
        }

        // Load images
        if (presentationData.images) {
          presentationData.images.forEach((imgData) => {
            const slide = document.getElementById(imgData.slide);
            if (!slide) return;

            const img = document.createElement("img");
            img.src = imgData.src;
            img.className = "slide-image";
            img.style.width = imgData.width || "200px";
            img.style.height = imgData.height || "auto";
            img.style.left = imgData.left || "50px";
            img.style.top = imgData.top || "50px";

            addImageControls(img);
            slide.appendChild(img);
          });
        }
      }

      function addImage() {
        const input = document.createElement("input");
        input.type = "file";
        input.accept = "image/*";
        input.onchange = function (e) {
          const file = e.target.files[0];
          if (!file) return;

          const reader = new FileReader();
          reader.onload = function (event) {
            const img = document.createElement("img");
            img.src = event.target.result;
            img.className = "slide-image";
            img.style.width = "200px";
            img.style.height = "auto";
            img.style.left = "50px";
            img.style.top = "50px";

            addImageControls(img);

            const currentSlideEl = document.getElementById(
              `slide${currentSlide}`
            );
            currentSlideEl.appendChild(img);
            showToast("Image added successfully", "success");
          };
          reader.readAsDataURL(file);
        };
        input.click();
      }

      function addImageControls(img) {
        // Add resize handle
        const resizeHandle = document.createElement("div");
        resizeHandle.className = "resize-handle";
        img.appendChild(resizeHandle);

        // Add delete button
        const deleteBtn = document.createElement("div");
        deleteBtn.className = "delete-btn";
        deleteBtn.innerHTML = "×";
        deleteBtn.onclick = function () {
          img.remove();
          showToast("Image removed", "info");
        };
        img.appendChild(deleteBtn);

        // Make draggable
        img.onmousedown = function (e) {
          if (e.target === resizeHandle) {
            startResize(e, img);
          } else {
            startDrag(e, img);
          }
        };
      }

      function startDrag(e, img) {
        draggedElement = img;
        startX = e.clientX - img.offsetLeft;
        startY = e.clientY - img.offsetTop;

        document.onmousemove = function (e) {
          if (!draggedElement) return;

          const newX = e.clientX - startX;
          const newY = e.clientY - startY;

          draggedElement.style.left = newX + "px";
          draggedElement.style.top = newY + "px";
        };

        document.onmouseup = function () {
          draggedElement = null;
          document.onmousemove = null;
          document.onmouseup = null;
        };

        e.preventDefault();
      }

      function startResize(e, img) {
        resizingElement = img;
        startX = e.clientX;
        startY = e.clientY;
        startWidth = parseInt(img.style.width);
        startHeight = parseInt(img.style.height);

        document.onmousemove = function (e) {
          if (!resizingElement) return;

          const newWidth = startWidth + (e.clientX - startX);
          const newHeight = startHeight + (e.clientY - startY);

          if (newWidth > 50) resizingElement.style.width = newWidth + "px";
          if (newHeight > 50) resizingElement.style.height = newHeight + "px";
        };

        document.onmouseup = function () {
          resizingElement = null;
          document.onmousemove = null;
          document.onmouseup = null;
        };

        e.preventDefault();
      }

      // Language selection for export
      function selectExportLanguage(lang) {
        exportLanguage = lang;

        // Update UI to show selected language
        document.getElementById("lang-en-option").classList.remove("selected");
        document.getElementById("lang-id-option").classList.remove("selected");
        document
          .getElementById(`lang-${lang}-option`)
          .classList.add("selected");

        showToast(
          `Export language set to ${lang === "en" ? "English" : "Indonesia"}`,
          "info"
        );
      }

      // Export Functions
      async function exportToPDF() {
        closeExportModal();
        showProgress("Generating PDF...");

        const { jsPDF } = window.jspdf;
        const pdf = new jsPDF("l", "mm", "a4");
        const pageWidth = pdf.internal.pageSize.getWidth();
        const pageHeight = pdf.internal.pageSize.getHeight();

        for (let i = 1; i <= totalSlides; i++) {
          updateProgress((i / totalSlides) * 100);

          if (i > 1) {
            pdf.addPage();
          }

          const slide = document.getElementById(`slide${i}`);

          try {
            // Temporarily hide navigation and indicators for clean export
            const navigation = slide.querySelector(".navigation");
            const indicator = slide.querySelector(".slide-indicator");
            const editControls = slide.querySelector(".edit-controls");

            if (navigation) navigation.style.display = "none";
            if (indicator) indicator.style.display = "none";
            if (editControls) editControls.style.display = "none";

            // Temporarily hide non-selected language content
            const enContent = slide.querySelectorAll(".en-content");
            const idContent = slide.querySelectorAll(".id-content");

            if (exportLanguage === "en") {
              idContent.forEach((el) => (el.style.display = "none"));
            } else {
              enContent.forEach((el) => (el.style.display = "none"));
            }

            const canvas = await html2canvas(slide, {
              scale: 2,
              useCORS: true,
              logging: false,
              backgroundColor: null,
            });

            // Restore visibility
            if (navigation) navigation.style.display = "";
            if (indicator) indicator.style.display = "";
            if (editControls) editControls.style.display = "";

            // Restore language content visibility
            enContent.forEach((el) => (el.style.display = ""));
            idContent.forEach((el) => (el.style.display = ""));

            const imgData = canvas.toDataURL("image/png");
            const imgWidth = pageWidth - 20; // 10mm margin on each side
            const imgHeight = (canvas.height * imgWidth) / canvas.width;

            // Center the image on the page
            const xPos = (pageWidth - imgWidth) / 2;
            const yPos = (pageHeight - imgHeight) / 2;

            pdf.addImage(imgData, "PNG", xPos, yPos, imgWidth, imgHeight);
          } catch (error) {
            console.error("Error capturing slide:", error);
            showToast(`Error capturing slide ${i}: ${error.message}`, "error");
          }
        }

        hideProgress();
        const filename =
          exportLanguage === "en"
            ? "Microwave_Radio_Link_Presentation.pdf"
            : "Presentasi_Radio_Microwave_Link.pdf";
        pdf.save(filename);
        showToast("PDF exported successfully", "success");
      }

      async function exportToPPT() {
        closeExportModal();
        showProgress("Generating PowerPoint...");

        const pptx = new PptxGenJS();

        for (let i = 1; i <= totalSlides; i++) {
          updateProgress((i / totalSlides) * 100);

          const slide = document.getElementById(`slide${i}`);
          const slideTitle =
            slide.querySelector(".slide-title")?.textContent || `Slide ${i}`;

          // Determine slide layout based on content
          let slideLayout = "TITLE_SLIDE";
          if (i === 1) {
            slideLayout = "TITLE_SLIDE";
          } else if (slide.querySelector(".bilingual")) {
            slideLayout = "TWO_CONTENT";
          } else if (
            slide.querySelector(".solution-steps") ||
            slide.querySelector(".references")
          ) {
            slideLayout = "TWO_CONTENT";
          } else {
            slideLayout = "TITLE_AND_CONTENT";
          }

          const pptSlide = pptx.addSlide(slideLayout);

          try {
            // Temporarily hide navigation and indicators for clean export
            const navigation = slide.querySelector(".navigation");
            const indicator = slide.querySelector(".slide-indicator");
            const editControls = slide.querySelector(".edit-controls");

            if (navigation) navigation.style.display = "none";
            if (indicator) indicator.style.display = "none";
            if (editControls) editControls.style.display = "none";

            // Temporarily hide non-selected language content
            const enContent = slide.querySelectorAll(".en-content");
            const idContent = slide.querySelectorAll(".id-content");

            if (exportLanguage === "en") {
              idContent.forEach((el) => (el.style.display = "none"));
            } else {
              enContent.forEach((el) => (el.style.display = "none"));
            }

            const canvas = await html2canvas(slide, {
              scale: 2,
              useCORS: true,
              logging: false,
              backgroundColor: null,
            });

            // Restore visibility
            if (navigation) navigation.style.display = "";
            if (indicator) indicator.style.display = "";
            if (editControls) editControls.style.display = "";

            // Restore language content visibility
            enContent.forEach((el) => (el.style.display = ""));
            idContent.forEach((el) => (el.style.display = ""));

            const imgData = canvas.toDataURL("image/png");

            // Add image to fill the entire slide
            pptSlide.addImage({
              data: imgData,
              x: 0,
              y: 0,
              w: "100%",
              h: "75%",
            });
          } catch (error) {
            console.error("Error capturing slide:", error);
            showToast(`Error capturing slide ${i}: ${error.message}`, "error");

            // Fallback: Add text content if image capture fails
            const title =
              slide.querySelector(".slide-title")?.textContent || `Slide ${i}`;
            pptSlide.addText(title, {
              x: 0.5,
              y: 0.5,
              fontSize: 24,
              bold: true,
              color: "FFFFFF",
            });

            const content = slide.querySelector(".slide-content");
            if (content) {
              const textElements = content.querySelectorAll("p, li, h3, h4");
              let yPos = 1.5;
              textElements.forEach((el) => {
                if (el.textContent.trim()) {
                  pptSlide.addText(el.textContent.trim(), {
                    x: 0.5,
                    y: yPos,
                    fontSize: 14,
                    color: "FFFFFF",
                  });
                  yPos += 0.5;
                }
              });
            }
          }
        }

        hideProgress();
        const filename =
          exportLanguage === "en"
            ? "Microwave_Radio_Link_Presentation.pptx"
            : "Presentasi_Radio_Microwave_Link.pptx";
        pptx.writeFile({ fileName: filename });
        showToast("PowerPoint exported successfully", "success");
      }

      // Keyboard navigation
      document.addEventListener("keydown", function (e) {
        if (e.key === "ArrowRight") nextSlide();
        if (e.key === "ArrowLeft") prevSlide();
      });

      // Touch/swipe support for mobile
      let touchStartX = 0;
      let touchEndX = 0;

      document.addEventListener("touchstart", function (e) {
        touchStartX = e.changedTouches[0].screenX;
      });

      document.addEventListener("touchend", function (e) {
        touchEndX = e.changedTouches[0].screenX;
        handleSwipe();
      });

      function handleSwipe() {
        if (touchEndX < touchStartX - 50) nextSlide();
        if (touchEndX > touchStartX + 50) prevSlide();
      }
    </script>
  </body>
</html>
